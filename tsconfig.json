{
    "compilerOptions": {
        // this aligns with Vue's browser support
        "target": "es5",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        // if using webpack 2+ or rollup, to leverage tree shaking:
        "module": "umd",
        "moduleResolution": "node",
        "lib": [
            "es6", "dom"
        ],                         
        "baseUrl": ".",
        "paths": {
          "@/*": [
            "src/*"
          ]
        },
        "declaration": true,
        "outDir": "lib"        
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
        //"test/**/*.ts",
        //"test/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
